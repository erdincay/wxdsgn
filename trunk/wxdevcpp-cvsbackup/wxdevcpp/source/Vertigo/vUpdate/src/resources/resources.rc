// Icon and cursor...
IDI_ICON        ICON    LOADONCALL DISCARDABLE "resources/icon.ico"

// Logo...
ID_LOGOBOX      BITMAP  LOADONCALL DISCARDABLE "resources/logo.bmp"

// Swap.exe (for self upgrades)...
IDE_SWAP        EXE     "resources/swap.exe"

// Options dialog box...
OptionsBox DIALOG DISCARDABLE 32, 32, 320, 192
CAPTION "Options"
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_VISIBLE | WS_CAPTION | WS_SYSMENU
FONT 8, "Lucida Console"
    BEGIN

        // Buttons...
        DEFPUSHBUTTON   "OK", IDOK, 265, 135, 50, 14
        PUSHBUTTON      "Default", IDD_DEFAULT, 265, 152, 50, 14

        // "Interface" groupbox and contents...
        GROUPBOX "Interface...", IDC_STATIC, 5, 5, 100, 65
                AUTOCHECKBOX  "Cool progress bar",  IDD_INTERFACE_SMOOTH_PROGRESS_BAR, 10, 20, 85, 10
                AUTOCHECKBOX  "Cheesy Dev-C++ theme",IDD_INTERFACE_DEV_THEME, 10, 35, 90, 10, WS_DISABLED
                AUTOCHECKBOX  "Enable previews",    IDD_INTERFACE_PREVIEWS, 10, 50, 85, 10

        // "Only show me" groupbox and contents...
        GROUPBOX "List...", IDC_STATIC, 5, 75, 100, 110
                AUTOCHECKBOX  "Packages (.DevPak)", IDD_LIST_PACKAGES, 10, 90, 85, 10
                AUTOCHECKBOX  "Patches",            IDD_LIST_PATCHES, 10, 105, 85, 10
                AUTOCHECKBOX  "Language files",     IDD_LIST_LANGUAGES, 10, 120, 85, 10
                COMBOBOX      "",                   IDD_LIST_LANGUAGES_LIST, 30, 133, 65, 60, CBS_DROPDOWNLIST | CBS_SORT | WS_VSCROLL
                AUTOCHECKBOX  "Help files",         IDD_LIST_HELP, 10, 150, 85, 10
                AUTOCHECKBOX  "Other stuff",        IDD_LIST_OTHER, 10, 165, 85, 10

        // "Advanced" group box and contents...
        GROUPBOX "Advanced...",  IDC_STATIC, 110, 5, 205, 123
            AUTOCHECKBOX "Generate debug log",      IDD_ADVANCED_DEBUG_LOG, 115, 20, 90, 10
            PUSHBUTTON   "Edit install log",        IDD_ADVANCED_EDIT_INSTALL_LOG, 115, 35, 90, 15
            PUSHBUTTON   "Manual self-update",      IDD_ADVANCED_MANUAL_UPDATE, 115, 55, 90, 15
            AUTOCHECKBOX "Use proxy",               IDD_ADVANCED_PROXY_FLAG, 115, 75, 90, 10
            LTEXT        "Server:",                 IDC_STATIC, 115, 95, 35, 10
            EDITTEXT     "hostname",                IDD_ADVANCED_PROXY_SERVER, 155, 95, 140, 12, ES_AUTOHSCROLL
            LTEXT        "Port:",                   IDC_STATIC, 115,110, 35, 10
            EDITTEXT     "8010",                    IDD_ADVANCED_PROXY_PORT, 155,110, 20, 12, ES_AUTOHSCROLL

        // Description box...
        EDITTEXT "ERROR",
                 IDD_OPTION_DESCRIPTION, 110, 135, 150, 50, ES_READONLY | ES_LEFT | 
                 ES_MULTILINE | WS_VSCROLL

    END

