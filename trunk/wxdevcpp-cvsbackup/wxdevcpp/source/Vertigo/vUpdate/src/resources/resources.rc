// SelfUpdate dialog box...
SelfUpdate DIALOG DISCARDABLE 32, 32, 110, 180
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_VISIBLE | WS_CAPTION | WS_SYSMENU
CAPTION "Self Upgrade"
FONT 8, "Lucida Console"
    BEGIN
        LTEXT           "You have...", IDC_STATIC, 5, 5, 100, 10
        EDITTEXT        ""            VUPDATE_VERSION_CHAR, IDD_LOCAL_VERSION, 5, 15, 100, 10, WS_DISABLED
        
        LTEXT           "Available...", IDC_STATIC, 5, 35, 100, 10
        EDITTEXT        "ERROR", IDD_AVAILABLE_VERSION, 5, 45, 100, 10, WS_DISABLED
        
        LTEXT           "What's new?", IDC_STATIC, 5, 65, 100, 10
        EDITTEXT        "ERROR", IDD_UPDATE_COMMENTS, 5, 75, 100, 80, WS_BORDER | ES_READONLY | ES_LEFT | ES_MULTILINE | WS_VSCROLL

        DEFPUSHBUTTON   "Upgrade", IDYES, 5, 160, 45, 14
        PUSHBUTTON      "Cancel", IDNO, 60, 160, 45, 14
    END

// Exe image version stuff...
1 VERSIONINFO
FILEVERSION VUPDATE_FILE_VERSION
PRODUCTVERSION VUPDATE_FILE_VERSION
FILETYPE VFT_APP
    BEGIN                                     
      BLOCK "StringFileInfo"
      BEGIN
        BLOCK "040904E4"                      // &H0409 = LANG_ID English, &H04E4 = charset ANSI
        BEGIN
          VALUE "CompanyName",      "Vertigo"
          VALUE "FileDescription",  "vUpdate - The world's most pimpin webupdater (sometimes)"
          VALUE "FileVersion",      VUPDATE_VERSION_CHAR
          VALUE "InternalName",     "vUpdate"
          VALUE "LegalTradeMarks",  "Vertigo - Software for the BBS generation."
          VALUE "OriginalFilename", "vUpdate.exe"
          VALUE "ProductName",      "vUpdate"
          VALUE "ProductVersion",   VUPDATE_VERSION_CHAR
        END
      END
      BLOCK "VarFileInfo"
      BEGIN
        VALUE "Translation", 0x0409, 1252
      END
    END

